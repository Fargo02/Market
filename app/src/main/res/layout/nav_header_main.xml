<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/nav_header_image"
        android:layout_width="@dimen/mark_56dp"
        android:layout_height="@dimen/mark_56dp"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/mark_5dp"
        android:layout_marginBottom="@dimen/mark_16dp"
        android:layout_marginStart="@dimen/mark_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/name_and_lastname"
        style="@style/nav_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ivan Ivanov"
        android:layout_marginStart="@dimen/mark_32dp"
        android:layout_marginTop="@dimen/mark_6dp"
        app:layout_constraintStart_toEndOf="@id/nav_header_image"
        app:layout_constraintTop_toTopOf="@id/nav_header_image" />
    <TextView
        style="@style/nav_text"
        android:id="@+id/namber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        tools:text="+7 912 011-11-33"
        app:layout_constraintStart_toStartOf="@id/name_and_lastname"
        app:layout_constraintTop_toBottomOf="@id/name_and_lastname" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>